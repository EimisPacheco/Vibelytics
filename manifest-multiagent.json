{
  "manifest_version": 3,
  "name": "Vibelytics AI - TiDB Vector Search",
  "version": "2.0",
  "description": "AI-powered YouTube comment analytics using TiDB vector search and multi-agent semantic analysis.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "services/agent-loader.js",
        "content-script.js",
        "content-script-multiagent.js"
      ],
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://api.resend.com/*",
    "https://*.tidbcloud.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Vibelytics AI - YouTube Insights"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "services/*.js"
      ],
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*"]
    }
  ]
}